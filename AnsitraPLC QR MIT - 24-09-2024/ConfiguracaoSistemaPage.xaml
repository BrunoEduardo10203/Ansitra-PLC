<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AnsitraPLC_QR_MIT.ConfiguracaoSistemaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AnsitraPLC_QR_MIT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
        
    Background="#324848">

    <Grid>
        <Grid VerticalAlignment="Top">
            <Grid CornerRadius="10" Background="#2F4F4F" Height="65" Margin="30">
                <TextBlock Text="Dados da Estação" 
                       FontWeight="Bold" 
                       FontSize="20" 
                       Margin="12"/>

                <TextBlock Text="Informações da estação, como rodovia, número, ID da rodovia, quilômetro, localização do equipamento e o estado em que está instalado."
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Bottom" 
                       FontSize="14"
                       Margin="20,24,12,12"/>
            </Grid>
        </Grid>

        <Grid VerticalAlignment="Top" Margin="0,70,0,0">
            <Grid CornerRadius="10" Background="#2F4F4F" Height="65" Margin="30">
                <TextBlock Text="Faixas" 
                       FontWeight="Bold" 
                       FontSize="20" 
                       Margin="12"/>

                <TextBlock Text="Exibe os detectores, com os nomes dos canais e seus respectivos IDs, além do sentido (Norte, Sul, Leste, Oeste, Interno ou Externo), tipo e número (de 1 a 10) de cada um." 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Bottom" 
                       FontSize="14"
                       Margin="20,24,12,12"/>
            </Grid>
        </Grid>

        <Grid VerticalAlignment="Top" Margin="0,140,0,0">
            <Grid CornerRadius="10" Background="#2F4F4F" Height="65" Margin="30">
                <TextBlock Text="Laços" 
                       FontWeight="Bold" 
                       FontSize="20" 
                       Margin="12"/>

                <TextBlock Text="Apresenta os detectores, as medidas de comprimento dos laços e a distância entre cada par de laços." 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Bottom" 
                       FontSize="14"
                       Margin="20,24,12,12"/>
            </Grid>
        </Grid>

        <Grid VerticalAlignment="Top" Margin="0,210,0,0">
            <Grid CornerRadius="10" Background="#2F4F4F" Height="65" Margin="30">
                <TextBlock Text="Classes" 
                       FontWeight="Bold" 
                       FontSize="20" 
                       Margin="12"/>

                <TextBlock Text="Apresenta o tipo de cada classe, seu nome, ponto inicial, ponto final e a quantidade de eixos." 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Bottom" 
                       FontSize="14"
                       Margin="20,24,12,12"/>
            </Grid>
        </Grid>

        <Grid VerticalAlignment="Top" Margin="0,280,0,0">
            <Grid CornerRadius="10" Background="#2F4F4F" Height="65" Margin="30">
                <TextBlock Text="Filtro" 
                       FontWeight="Bold" 
                       FontSize="20" 
                       Margin="12"/>

                <TextBlock Text="Define o filtro de comprimento e velocidade." 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Bottom" 
                       FontSize="14"
                       Margin="20,24,12,12"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
