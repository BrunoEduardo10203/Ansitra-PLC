<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AnsitraPLC_QR_MIT.MonitoramentoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AnsitraPLC_QR_MIT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#324848">

    <Grid>
        <Grid VerticalAlignment="Top">
            <Grid CornerRadius="10" Background="#2F4F4F" Height="65" Margin="30">
                <TextBlock Text="Alarmes" 
                           FontWeight="Bold" 
                           FontSize="20" 
                           Margin="12"/>

                <TextBlock Text="Verifica se ocorrer alguma alteração." 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Bottom" 
                           FontSize="14"
                           Margin="20,24,12,12"/>
            </Grid>
        </Grid>

        <Grid VerticalAlignment="Top" Margin="0,70,0,0">
            <Grid CornerRadius="10" Background="#2F4F4F" Height="65" Margin="30">
                <TextBlock Text="Aferição" 
                           FontWeight="Bold" 
                           FontSize="20" 
                           Margin="12"/>

                <TextBlock Text="Verifica as informações do monitoramento." 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Bottom" 
                           FontSize="14"
                           Margin="20,24,12,12"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
